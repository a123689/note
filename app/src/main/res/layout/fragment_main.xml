<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    tools:context=".ui.fragment.MainFragment">


    <ImageView
        android:id="@+id/ivSetting"
        android:layout_width="36dp"
        android:src="@drawable/ic_setting"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="16dp"
        android:padding="6dp"
        android:layout_marginTop="22dp"
        android:layout_height="36dp"/>

    <TextView
        android:id="@+id/tvFolder"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivSetting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        android:textSize="25sp"
        android:text="@string/folder"
        android:textStyle="bold"
        android:textColor="@color/cololorBlack"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edSearch"
        app:layout_constraintDimensionRatio="320:34"
        app:layout_constraintTop_toBottomOf="@id/tvFolder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:hint="@string/search"
        android:textColor="@color/cololorBlack"
        android:drawableLeft="@drawable/ic_search"
        android:paddingLeft="6dp"
        android:background="@drawable/custom_background_edittext"
        app:layout_constraintWidth_percent="0.89"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutFolder"
        android:layout_width="0dp"
        android:background="@drawable/custom_background_folder"
        app:layout_constraintTop_toBottomOf="@id/edSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="321:161"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="26dp"
        android:layout_height="0dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewFolder"
            android:layout_width="match_parent"
            android:background="@drawable/custom_background_folder"
            android:layout_height="match_parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/layoutFolder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="328:112"
        android:layout_marginTop="16dp"
        android:background="@color/cololorBlack"
        app:layout_constraintWidth_percent="0.9"
        android:layout_height="0dp">

    </FrameLayout>
    <View
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@id/layoutBottom"
        android:background="@color/colorBorder"
        android:layout_height="0.5dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutBottom"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintDimensionRatio="360:62"
        android:background="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/ivNewFolder"
            android:layout_width="36dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="6dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_add_folder2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="36dp"/>
        <ImageView
            android:layout_width="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_edit"
            android:layout_marginRight="16dp"
            android:padding="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="36dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>