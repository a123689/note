<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/ivFolder"
        android:layout_width="36dp"
        android:padding="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_folder"
        android:layout_height="36dp"/>
    <TextView
        android:id="@+id/tvName"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ivFolder"
        android:text="name"

        app:layout_constraintTop_toTopOf="@id/ivFolder"
        android:textSize="15sp"
        android:textColor="@color/cololorBlack"

        app:layout_constraintBottom_toBottomOf="@id/ivFolder"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/ivRight"
        android:layout_width="36dp"
        android:padding="6dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_right"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="36dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/colorBorder"
        android:text="0"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/ivRight"
        app:layout_constraintBottom_toBottomOf="@id/ivRight"
        app:layout_constraintEnd_toStartOf="@id/ivRight"
        android:layout_height="wrap_content"/>
    <View
        app:layout_constraintTop_toBottomOf="@id/ivFolder"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintStart_toStartOf="@id/tvName"
        android:background="#CCCCCC"
        android:layout_height="0.5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>