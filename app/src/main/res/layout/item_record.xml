<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/img_size_large"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/img_padding_large"
    android:backgroundTint="@color/colorBorder">

    <ImageView
        android:id="@+id/btnPlay"
        android:layout_width="@dimen/img_size_small"
        android:layout_height="@dimen/img_size_small"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_pause"
        android:elevation="2dp"
        android:layout_marginStart="@dimen/space_screen_large" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_size_small"
        android:layout_centerInParent="true"
        android:src="@drawable/bg_sound_wave"
        android:scaleType="centerCrop"
        android:layout_marginHorizontal="@dimen/space_screen_large"
        android:elevation="1dp" />

    <SeekBar
        android:id="@+id/waveformSeekBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/CustomProgressBarHorizontal"
        android:progress="0" />

    <ImageView
        android:id="@+id/btnDeleteRecord"
        android:layout_width="@dimen/img_size_small"
        android:layout_height="@dimen/img_size_small"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_delete_white"
        android:elevation="2dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/space_screen_large" />
</RelativeLayout>