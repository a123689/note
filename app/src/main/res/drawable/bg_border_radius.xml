        <shape android:shape="rectangle">
            <solid android:color="@color/colorTransparent80" />
            <corners android:radius="@dimen/snap_radius" />
            <stroke android:width="4dp" android:color="@color/colorAccent"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorTransparent80" />
            <stroke android:width="4dp" android:color="@color/colorAccent"/>
            <corners android:radius="@dimen/snap_radius" />
        </shape>
    </item>
</selector>